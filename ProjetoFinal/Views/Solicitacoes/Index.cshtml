@model IEnumerable<Solicitacao>

@{
    ViewData["Title"] = "Solicitações";
    ViewData["th_paciente"] = "Paciente";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-dark">Novo</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="table-success">
            <th>
                #@Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @ViewData["th_paciente"]
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeMedico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataSolicitacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prioridade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Paciente.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeMedico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataSolicitacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prioridade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="icon-link icon-link-hover">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="icon-link icon-link-hover">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="icon-link icon-link-hover">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
