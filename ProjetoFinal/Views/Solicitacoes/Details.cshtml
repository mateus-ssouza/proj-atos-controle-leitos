@using ProjetoFinal.Models.Enums

@model ProjetoFinal.Models.Solicitacao

@{
    ViewData["Title"] = "Detalhes da Solicitação";
    ViewData["th_paciente"] = "Paciente";
    ViewData["info_leito"] = "Leito alocado";
}

<div class="container">
    <div class="text-center mt-5">
        <h2 class="text-primary text-uppercase">
            <i class="fa-solid fa-file-medical"></i> @ViewData["Title"]
        </h2>
    </div>

    <div class="row mb-1">
        <div class="col-lg-7 mx-auto">
            <div class="card mt-2 mx-auto p-4 bg-primary bg-opacity-25 border-primary">
                <div class="card-body">

                    <div class="container bg-white mb-3 borda-container">

                        <div class="controls">
                            
                            <div class="row mb-2 mt-3">
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.DataSolicitacao)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.DataSolicitacao)
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @ViewData["th_paciente"]
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.Paciente.Nome)
                                        </dd>
                                    </dl>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.Motivo)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.Motivo)
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.Status)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.Status)
                                        </dd>
                                    </dl>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.Prioridade)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.Prioridade)
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.TipoLeito)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.TipoLeito)
                                        </dd>
                                    </dl>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.NomeMedico)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.NomeMedico)
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.NomeEnfermeiro)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.NomeEnfermeiro)
                                        </dd>
                                    </dl>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.Observacoes)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.Observacoes)
                                        </dd>
                                    </dl>
                                </div>           
                            </div>

                            @if(Model.DataRegulacao != null)
                            {
                                <div class="row mb-2">
                                    <div class="col-md-6">
                                        <dl class="dl-horizontal">
                                            <dt class="text-uppercase fw-bold text-primary">
                                                @Html.DisplayNameFor(model => model.DataRegulacao)
                                            </dt>
                                            <dd class="fw-bold">
                                                @Html.DisplayFor(model => model.DataRegulacao)
                                            </dd>
                                        </dl>
                                    </div>

                                    @if (Model.DataFinalizacao != null)
                                    {
                                        <div class="col-md-6">
                                            <dl class="dl-horizontal">
                                                <dt class="text-uppercase fw-bold text-primary">
                                                    @Html.DisplayNameFor(model => model.DataFinalizacao)
                                                </dt>
                                                <dd class="fw-bold">
                                                    @Html.DisplayFor(model => model.DataFinalizacao)
                                                </dd>
                                            </dl>
                                        </div>
                                    }
                                </div> 
                            }                            
                        </div>
                    </div>
                    @if (Model.Status == SolicitacaoStatus.REGULADO)
                    {
                        <div class="container bg-white mb-3 borda-container">

                            <div class="mt-3">
                                <h5 class="text-primary text-uppercase ">
                                    <i class="fa-solid fa-bed"></i> @ViewData["info_leito"]
                                </h5>
                            </div>

                            <hr>

                            <div class="controls">

                                <div class="row mb-2 mt-3">
                                    <div class="col-md-6">
                                        <dl class="dl-horizontal">
                                            <dt class="text-uppercase fw-bold text-primary">
                                                @Html.DisplayNameFor(model => model.Leito.Codigo)
                                            </dt>
                                            <dd class="fw-bold">
                                                @Html.DisplayFor(model => model.Leito.Codigo)
                                            </dd>
                                        </dl>
                                    </div>
                                    <div class="col-md-6">
                                        <dl class="dl-horizontal">
                                            <dt class="text-uppercase fw-bold text-primary">
                                                @Html.DisplayNameFor(model => model.Leito.Status)
                                            </dt>
                                            <dd class="fw-bold">
                                                @Html.DisplayFor(model => model.Leito.Status)
                                            </dd>
                                        </dl>
                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-md-6">
                                        <dl class="dl-horizontal">
                                            <dt class="text-uppercase fw-bold text-primary">
                                                @Html.DisplayNameFor(model => model.Leito.TipoLeito)
                                            </dt>
                                            <dd class="fw-bold">
                                                @Html.DisplayFor(model => model.Leito.TipoLeito)
                                            </dd>
                                        </dl>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    
                    <div>
                        @if (Model.Status != SolicitacaoStatus.FINALIZADA)
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
                        }
                        @if (Model.Status == SolicitacaoStatus.SOLICITADO)
                        {
                            <a asp-action="Reserve" asp-route-id="@Model.Id" class="btn btn-secondary">Reservar</a>
                        }
                        <a asp-action="Index" class="btn btn-info">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>