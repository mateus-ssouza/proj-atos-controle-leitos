@{
    ViewData["Title"] = "Página Inicial";
    ViewData["Sub-Title"] = "Gerenciamento dos leitos";
}

<h4 class="text-uppercase text-primary fw-bold mt-5">
    <i class="fa-solid fa-chart-simple"></i> @ViewData["Sub-Title"]
</h4>

<div class="container bg-primary bg-opacity-10 border-primary borda-container mt-4">
    
    <div class="row mb-2">
        <div class="container mt-2">
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="d-flex flex-column">
                        <div class="card mb-3">
                            <div class="card-body borda-container">
                                <h5 class="card-title fw-bold text-uppercase text-primary">Total de Leitos</h5>
                                <h6 class="card-subtitle fw-bold mb-2 text-muted">@ViewBag.TotalLeitos</h6>
                            </div>
                        </div>
                        <div class="card mb-3">
                            <div class="card-body borda-container">
                                <h5 class="card-title fw-bold text-uppercase text-primary">Leitos Ocupados</h5>
                                <h6 class="card-subtitle fw-bold mb-2 text-muted">@ViewBag.LeitosOcupados</h6>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body borda-container">
                                <h5 class="card-title fw-bold text-uppercase text-primary">Porcentagem de Ocupação</h5>
                                @if (!double.IsNaN(ViewBag.PorcentagemOcupacao))
                                {
                                    <h6 class="card-subtitle mb-2 fw-bold text-muted">@ViewBag.PorcentagemOcupacao.ToString("0.00")%</h6>
                                }
                                else
                                {
                                    <h6 class="card-subtitle mb-2 fw-bold text-muted">Sem dados disponíveis</h6>
                                }
                                
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <canvas id="leitosChart"></canvas> 
                </div>
            </div>
        </div>
    </div>
</div>