@model IEnumerable<Paciente>

@{
    ViewData["Title"] = "Pacientes";
}

<h4 class="text-uppercase text-primary">
    <i class="fa-solid fa-hospital-user"></i> @ViewData["Title"]
</h4>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create"><i class="fa-solid fa-circle-plus fa-xl"></i></a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>

            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <span class="badge bg-light">@Html.DisplayFor(modelItem => item.Nome)</span>  
                </td>
                <td >
                    <span class="badge bg-light cpf">@Html.DisplayFor(modelItem => item.Cpf)</span>  
                </td>
                <td>
                    <span class="badge bg-light">@Html.DisplayFor(modelItem => item.Email)</span>  
                </td>
                <td>
                    <span class="badge bg-light telefone">@Html.DisplayFor(modelItem => item.Telefone)</span>  
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-acoes btn-acoes-ini">
                        <i class="fa-solid fa-pen"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-acoes btn-acoes-ini">
                        <i class="fa-solid fa-eye"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-acoes">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
