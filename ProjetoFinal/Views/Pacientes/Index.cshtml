@model IEnumerable<Paciente>

@{
    ViewData["Title"] = "Pacientes";
}

<h2>@ViewData["Title"]</h2>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-primary">Adicionar</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr class="table-success">
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td></td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td class="cpf">
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="telefone">
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-acoes btn-acoes-ini">
                        <i class="fa-solid fa-pen"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-acoes btn-acoes-ini">
                        <i class="fa-solid fa-eye"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-acoes">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
