@using ProjetoFinal.Models.Enums

@model ProjetoFinal.Models.Leito

@{
    ViewData["Title"] = "Detalhes do leito";
    ViewData["info_paciente"] = "Paciente";
    ViewData["info_solicitacao"] = "Solicitação vinculada";
}

<div class="container">
    <div class="text-center mt-5">
        <h2 class="text-primary text-uppercase">
            <i class="fa-solid fa-bed"></i> @ViewData["Title"]
        </h2>
    </div>

    <div class="row mb-1">
        <div class="col-lg-7 mx-auto">
            <div class="card mt-2 mx-auto p-4 bg-primary bg-opacity-25 border-primary">
                <div class="card-body">

                    <div class="container bg-white mb-3 borda-container">

                        <div class="controls">

                            <div class="row mb-2 mt-3">
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.Codigo)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.Codigo)
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.Status)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.Status)
                                        </dd>
                                    </dl>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.TipoLeito)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.TipoLeito)
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model.Status == StatusLeito.OCUPADO)
                    {
                        <div class="container bg-white mb-3 borda-container">

                            <div class="mt-3">
                                <h5 class="text-primary text-uppercase">
                                    <i class="fa-solid fa-file-medical"></i> @ViewData["info_solicitacao"]
                                </h5>
                            </div>

                            <hr>

                            <div class="controls">

                                <div class="row mb-2 mt-3">
                                    <div class="col-md-6">
                                        <dl class="dl-horizontal">
                                            <dt class="text-uppercase fw-bold text-primary">
                                                @Html.DisplayNameFor(model => model.Solicitacao.DataSolicitacao)
                                            </dt>
                                            <dd class="fw-bold">
                                                @Html.DisplayFor(model => model.Solicitacao.DataSolicitacao)
                                            </dd>
                                        </dl>
                                    </div>
                                    <div class="col-md-6">
                                        <dl class="dl-horizontal">
                                            <dt class="text-uppercase fw-bold text-primary">
                                                @Html.DisplayNameFor(model => model.Solicitacao.DataRegulacao)
                                            </dt>
                                            <dd class="fw-bold">
                                                @Html.DisplayFor(model => model.Solicitacao.DataRegulacao)
                                            </dd>
                                        </dl>
                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-md-6">
                                        <dl class="dl-horizontal">
                                            <dt class="text-uppercase fw-bold text-primary">
                                                @ViewData["info_paciente"]
                                            </dt>
                                            <dd class="fw-bold">
                                                @Html.DisplayFor(model => model.Solicitacao.Paciente.Nome)
                                            </dd>
                                        </dl>
                                    </div>

                                    <div class="col-md-6">
                                        <dl class="dl-horizontal">
                                            <dt class="text-uppercase fw-bold text-primary">
                                                @Html.DisplayNameFor(model => model.Solicitacao.NomeMedico)
                                            </dt>
                                            <dd class="fw-bold">
                                                @Html.DisplayFor(model => model.Solicitacao.NomeMedico)
                                            </dd>
                                        </dl>
                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-md-6">
                                        <dl class="dl-horizontal">
                                            <dt class="text-uppercase fw-bold text-primary">
                                                @Html.DisplayNameFor(model => model.Solicitacao.NomeEnfermeiro)
                                            </dt>
                                            <dd class="fw-bold">
                                                @Html.DisplayFor(model => model.Solicitacao.NomeEnfermeiro)
                                            </dd>
                                        </dl>
                                    </div>

                                    <div class="col-md-6">
                                        <dl class="dl-horizontal">
                                            <dt class="text-uppercase fw-bold text-primary">
                                                @Html.DisplayNameFor(model => model.Solicitacao.Observacoes)
                                            </dt>
                                            <dd class="fw-bold">
                                                @Html.DisplayFor(model => model.Solicitacao.Observacoes)
                                            </dd>
                                        </dl>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
                        @if (Model.Status == StatusLeito.OCUPADO)
                        {
                            <a asp-action="Relocate" asp-route-id="@Model.Id" class="btn btn-secondary">Transferir</a>
                            <a asp-action="Finalize" asp-route-id="@Model.Id" class="btn btn-success">Finalizar</a>
                        }
                        <a asp-action="Index" class="btn btn-info">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>