@model ProjetoFinal.Models.ViewModels.LeitoViewModel

@{
    ViewData["Title"] = "Solicitação vinculada";
    ViewData["info_paciente"] = "Paciente";
    ViewData["info_leito"] = "Leito atual"; ;
}

<div class="container">
    <div class="text-center mt-5">
        <h2 class="text-primary text-uppercase">
            <i class="fa-solid fa-file-medical"></i> @ViewData["Title"]
        </h2>
    </div>

    <div class="row mb-1">
        <div class="col-lg-7 mx-auto">
            <div class="card mt-2 mx-auto p-4 bg-primary bg-opacity-25 border-primary">
                <div class="card-body">

                    <div class="container bg-white mb-3 borda-container">

                        <div class="controls">

                            <div class="row mb-2 mt-3">
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.Solicitacao.DataSolicitacao)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.Solicitacao.DataSolicitacao)
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.Solicitacao.DataRegulacao)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.Solicitacao.DataRegulacao)
                                        </dd>
                                    </dl>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @ViewData["info_paciente"]
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.Solicitacao.Paciente.Nome)
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.Solicitacao.Motivo)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.Solicitacao.Motivo)
                                        </dd>
                                    </dl>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.Solicitacao.Status)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.Solicitacao.Status)
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.Solicitacao.Prioridade)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.Solicitacao.Prioridade)
                                        </dd>
                                    </dl>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.Solicitacao.TipoLeito)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.Solicitacao.TipoLeito)
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.Solicitacao.NomeMedico)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.Solicitacao.NomeMedico)
                                        </dd>
                                    </dl>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.Solicitacao.NomeEnfermeiro)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.Solicitacao.NomeEnfermeiro)
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.Solicitacao.Observacoes)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.Solicitacao.Observacoes)
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="container bg-white mb-3 borda-container">

                        <div class="mt-3">
                            <h5 class="text-primary text-uppercase ">
                                <i class="fa-solid fa-bed"></i> @ViewData["info_leito"]
                            </h5>
                        </div>

                        <hr>

                        <div class="controls">

                            <div class="row mb-2 mt-3">
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.Leito.Codigo)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.Leito.Codigo)
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.Leito.Status)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.Leito.Status)
                                        </dd>
                                    </dl>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-6">
                                    <dl class="dl-horizontal">
                                        <dt class="text-uppercase fw-bold text-primary">
                                            @Html.DisplayNameFor(model => model.Leito.TipoLeito)
                                        </dt>
                                        <dd class="fw-bold">
                                            @Html.DisplayFor(model => model.Leito.TipoLeito)
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div>
                        <form asp-action="Finalize">
                            <input type="hidden" asp-for="Leito.Id" />
                            <input type="submit" value="Finalizar" class="btn btn-success" />
                            <a asp-action="Details" asp-route-id="@Model.Leito.Id" class="btn btn-info">Voltar</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>